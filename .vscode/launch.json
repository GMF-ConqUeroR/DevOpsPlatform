    "configurations": [
        {
            "name": "auth api server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            // 指定启动时的入口文件
            // workspaceFolder是顶层目录
            // go run vblog/main.go start -f vblog/etc/config.toml 
            "program": "${workspaceFolder}/auth/main.go",
            "args": [
                "start",
                "-f",
                "${workspaceFolder}/auth/etc/config.toml"
            ]
        }
    ]
}